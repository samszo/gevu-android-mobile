			<s:HGroup>
				<s:Button   label="Ajouter un contact" click="add_form_clickHandler(event)"/>
				<s:Button   label="Supprimer un contact" click="delete_clickHandler(event)"/>
			</s:HGroup>	
		</s:VGroup>
		
