				</s:columns>
			</s:DataGrid>
			
			<s:VGroup id="add_contact_form" visible="false">
				<s:HGroup>
					<s:Label text="Nom:"/>
					<s:TextInput id="nom_in" height="25" width="125"/>
				</s:HGroup>	
				<s:HGroup>	
					<s:Label text="prenom:"/>
					<s:TextInput id="prenom_in" height="25" width="125" />
				</s:HGroup>
				<s:HGroup>	
					<s:Label text="Fixe:"/>
					<s:TextInput id="fixe_in" height="25" width="125"
								 />
				</s:HGroup>
				<s:HGroup>	
					<s:Label text="Mobile"/>
					<s:TextInput id="mobile_in" height="25" width="125"
								 />
				</s:HGroup>
				<s:HGroup>	
					<s:Label text="Fax"/>
					<s:TextInput id="fax_in" height="25" width="125"
								 />
				</s:HGroup>
				<s:HGroup>	
					<s:Label text="Mail"/>
					<s:TextInput id="mail_in" height="25" width="125"
								 />
				</s:HGroup>	
				<s:Button label="Enrigisterer ce contact" click="save_contact_clickHandler(event)"/>	
			</s:VGroup>
			
		</s:VGroup>	
	</s:Panel>
</s:View>	