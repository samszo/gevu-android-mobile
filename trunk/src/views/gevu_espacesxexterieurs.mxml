			</s:HGroup>

			<s:HGroup width="100%">
				<s:Label text="Type d'espace spécifique" />
				<s:ComboBox id="cbType" width="100%" height="100%" labelField="lib" prompt="Choisissez"  />				
			</s:HGroup>

			<s:HGroup width="100%" >
				<s:Button id="saveModif" label="Enregistrer" />
