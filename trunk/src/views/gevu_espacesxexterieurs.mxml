		xmlns:view="views.*">
	
	<fx:Script>
		<![CDATA[
			[Bindable] private var selected_id:int;
			public function set_selected_id(x:int):void{
				this.selected_id=x;
			}
		]]>
	</fx:Script>

<s:Panel  title="Espace extérieur"
		   width="100%" height="100%" 
		   >
		<s:VGroup>
			<s:HGroup width="100%">
				<s:Label text="Identifiant : " />
				<s:TextInput id="F2" width="100%" />
			</s:HGroup>

			<s:HGroup width="100%">
				<s:Label text="fonction" />
				<s:TextInput id="F3" />
			</s:HGroup>

			<s:HGroup width="100%">
				<s:Label text="Type social d'espace : " />
				<s:RadioButton groupName="type" id="reponse_1" label="Lieu de Travail" color="0x323232"  /> 
				<s:RadioButton groupName="type" id="reponse_2" label="Public" color="0x323232"  />
