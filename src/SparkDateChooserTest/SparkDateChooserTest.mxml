<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="DateChooser"
		xmlns:local="*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<local:SparkDateField id="sdf" skinClass="DateFieldListSkin" change="currentDate.text = sdf.selectedDate.toDateString()"/>
	
	
	<s:Label id="currentDate" x="200" />
	<s:Rect width="100" height="20" x="200" y="30">
		<s:fill>
			<s:SolidColor id="currentColor" color="0x0" />
		</s:fill>
	</s:Rect>

</s:View>
